div.container.mx-auto.mt-10
  //- table(id="playertable" class='border-collapse text-justify rounded-lg shadow-md w-2/3 mx-auto')
  table(id="playerList" class="table table-striped" style="width:100%")
    thead.bg-secondPurple
      tr.shadow-sm.text-xs.text-fourthPurple
        th.py-2.px-4 PLAYER
        th.py-2.px-4 SALARY
        th.py-2.px-4 CONTRACT
        th.py-2.px-4 STATUS
    tbody
      


script.
  const playerListElement = document.getElementById('playerList').getElementsByTagName('tbody')[0];

  async function fetchData() {
    try {
      const response = await fetch('/getplayer');
      const data = await response.json();

      data.forEach(player => {
        const playerRow = document.createElement('tr');
        playerRow.className = 'shadow-sm text-xs';

        playerRow.innerHTML = `
          <td class="py-2 px-4">${player.name}</td>
          <td class="py-2 px-4">${player.salary}</td>
          <td class="py-2 px-4">${player.contract}</td>
          <td class="py-2 px-4">${player.status}</td>
        `;

        playerListElement.appendChild(playerRow);
      });
    } catch (error) {
    console.error('Error fetching data:', error);
    }
  }

  fetchData();
