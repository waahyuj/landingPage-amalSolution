script.
  const signInModalBtn = document.querySelector('[data-modal-toggle="signInModal"]');
  const signUpModalBtn = document.querySelector('[data-modal-toggle="signUpModal"]');
  const signInModal = document.getElementById('signInModal');
  const signUpModal = document.getElementById('signUpModal');
  const closeSignInBtn = document.getElementById('closeSignInBtn');
  const closeSignUpBtn = document.getElementById('closeSignUpBtn');
  const signed = document.getElementById('signed');
  const upped = document.getElementById('upped');
  const jumptoup = document.getElementById('jumptoup');
  const jumptoin = document.getElementById('jumptoin');

  signInModalBtn.addEventListener('click', () => {
    signInModal.classList.remove('hidden');
  });

  signUpModalBtn.addEventListener('click', () => {
    signUpModal.classList.remove('hidden');
  });

  closeSignInBtn.addEventListener('click', () => {
    signInModal.classList.add('hidden');
  });

  closeSignUpBtn.addEventListener('click', () => {
    signUpModal.classList.add('hidden');
  });

  upped.addEventListener('click', () => {
    signInModalBtn.click();
  });

  signed.addEventListener('click', () => {
    fetch('/getall')
      .then(response => response.json())
      .then(data => {
        console.log(data); // Do something with the data received from the server
      })
      .catch(error => {
        console.error(error);
      });
  });

  jumptoup.addEventListener('click', () => {
    signInModal.classList.add('hidden');
    signUpModal.classList.remove('hidden');
  });

  jumptoin.addEventListener('click', () => {
    signUpModal.classList.add('hidden');
    signInModal.classList.remove('hidden');
  });

  upped.addEventListener('click', () => {
  const usernameInput = document.querySelector('#signUpModal input[name="username"]');
  const emailInput = document.querySelector('#signUpModal input[name="email"]');
  const passwordInput = document.querySelector('#signUpModal input[name="password"]');

  const username = usernameInput.value;
  const email = emailInput.value;
  const password = passwordInput.value;

  const signUpData = {
    username: username,
    email: email,
    password: password
  };

  fetch('/signup', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(signUpData)
  })
    .then(response => {
      if (response.ok) {
        // Sign-up successful, redirect to success page or any other desired route
        window.location.href = '/signup/success';
      } else {
        // Handle sign-up failure
        console.error('Sign-up failed:', response.statusText);
      }
    })
    .catch(error => {
      console.error('Sign-up failed:', error);
    });
  });